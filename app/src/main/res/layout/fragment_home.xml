<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/flLayout"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Home">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="90dp"
    android:id="@+id/rlhome"
    android:visibility="visible"
    android:layout_centerInParent="true"
    android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/skyblue"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tvAR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/bold"
                        android:text="Dashboard"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlExpenseReport1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/View1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/bold"
                        android:text="Attendence"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlVisitEntryReport"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/View2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/bold"
                        android:text="My Customers"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlQuoteReport"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/View3"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/bold"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </RelativeLayout>


                <View
                    android:id="@+id/View1"
                    android:layout_width="match_parent"
                    android:layout_height="0.9dp"
                    android:layout_below="@+id/rlAttendance"
                    android:background="@color/white" />

                <View
                    android:id="@+id/View3"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.9dp"
                    android:layout_below="@+id/rlVisitEntryReport"
                    android:background="@color/white" />


                <View
                    android:id="@+id/View2"
                    android:layout_width="match_parent"
                    android:layout_height="0.9dp"
                    android:layout_below="@+id/rlExpenseReport1"
                    android:background="@color/white" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

</RelativeLayout>

</FrameLayout>